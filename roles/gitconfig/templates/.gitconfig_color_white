[color]
	ui = true
[color "branch"]
	current = green reverse dim
	local = yellow
	remote = magenta
[color "diff"]
	meta = black bold
	frag = magenta bold
	old = red reverse
	new = green dim reverse
	whitespace = yellow reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan reverse
	branch = magenta
